  "Create a template for a h file": 
  {
    "prefix": "TEMPLATE_FILE_H",
    "body": [
      "/*!****************************************************************************",
      "* (c) Copyright, Budapest, HU                                                 *",
      "* All rights reserved.                                                        *",
      "*******************************************************************************",
      "* @file      $TM_FILENAME",
      "* @author    ${1:author}",
      "* @date      $CURRENT_YEAR.$CURRENT_MONTH.$CURRENT_DATE",
      "* @brief     ${2:brief}",
      "* @note      ${3:note} ",
      "******************************************************************************/",
      "#ifndef      __$TM_FILENAME_BASE$_H",
      "#define      __$TM_FILENAME_BASE$_H",
      "/******************************************************************************",
      "* Includes                                                                    *",
      "******************************************************************************/",
      "// Inclusion of standard headers, with <xxx.h> format",
      "",
      "// 3'th party headers (CMSIS, HAL, LL, OS), with \"xxx.h\" format",
      "",
      "// Own project headers, with \"xxx.h\" format",
      "",
      "/******************************************************************************",
      "* Global #define expression macros                                            *",
      "******************************************************************************/",
      "",
      "/******************************************************************************",
      "* Global #define function macros                                              *",
      "******************************************************************************/",
      "",
      "/******************************************************************************",
      "* Global (public) constants                                                   *",
      "******************************************************************************/",
      "",
      "/******************************************************************************",
      "* Global (public) enums                                                       *",
      "******************************************************************************/",
      "",
      "/******************************************************************************",
      "* Global (public) typedefs                                                    *",
      "******************************************************************************/",
      "",
      "/******************************************************************************",
      "* Global (public) structs                                                     *",
      "******************************************************************************/",
      "",
      "/******************************************************************************",
      "* Global (public) unions                                                      *",
      "******************************************************************************/",
      "",
      "/******************************************************************************",
      "* Global (public) variables                                                   *",
      "******************************************************************************/",
      "",
      "/******************************************************************************",
      "* Global (public) functions                                                   *",
      "******************************************************************************/",
      "",
      "#endif   /* __$TM_FILENAME_BASE$_H */",
      "",
      "/******************************************************************************/",
      "/* END OF FILE                                                                */",
      "/******************************************************************************/",
      ""
    ],
    "description": "Create a template for a h file"
  }
