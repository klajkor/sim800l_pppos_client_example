  "Create a function template": 
  {
    "prefix": "TEMPLATE_FUNCTION",
    "body": [
      "${1:return_parm} ${2:}$TM_FILENAME_BASE$_${3:function_name}( ${4:parameter} )",
      "{",
      "    ${5:function_body}",
      "}"
    ],
    "description": "Create a function template"
  },

